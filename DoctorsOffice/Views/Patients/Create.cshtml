@{
  Layout = "_Layout";
}
@model DoctorsOffice.Models.Patient
<h4>Add a new Patient</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.BirthDate)
  @Html.TextBoxFor(model => model.BirthDate, new { type = "date"})

  @Html.Label("Select Doctor")
  @Html.DropDownList("DoctorId", null, string.Empty)

  <input type="submit" value="Add new patient" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all Patients", "Index")</p>

@{
  Layout = "_Layout";
}
@using DoctorsOffice.Models;
@model List<DoctorsOffice.Models.Doctor>;

<h1>Doctors</h1>

@if (@Model.Count == 0)
{
  <p>No Doctors Available</p>
}

@foreach (Doctor doctor in Model)
{
  <li>@Html.ActionLink($"{@doctor.Name}", "Details", new { doctorId = doctor.DoctorId })</li>
}

<p>@Html.ActionLink("Add a Doctor", "Create")</p>
<p>@Html.ActionLink("View all Patients", "Index", "Patients")</p>